<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productTypeEPLTV"
        style="@style/PoppinsSemiBold_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/productlistnameEPLTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/productListEPLImg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/productListPriceEPLTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/productlistnameEPLTV" />

    <TextView
        android:id="@+id/productlistnameEPLTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAppearance="@style/PoppinsMed_20"
        app:layout_constraintBottom_toTopOf="@id/productListPriceEPLTV"
        app:layout_constraintLeft_toRightOf="@id/productListEPLImg"
        app:layout_constraintRight_toLeftOf="@id/addProductPLEPLBtn"
        app:layout_constraintTop_toBottomOf="@id/productTypeEPLTV" />

    <TextView
        android:id="@+id/productListPriceEPLTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAppearance="@style/PoppinsMed_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/productListEPLImg"
        app:layout_constraintRight_toLeftOf="@id/addProductPLEPLBtn"
        app:layout_constraintTop_toBottomOf="@id/productlistnameEPLTV" />

    <Button
        android:id="@+id/addProductPLEPLBtn"
        style="@style/RectangleWRedGradientPL"
        android:layout_width="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="24dp"
        android:backgroundTint="@null"
        android:text="@string/DeleteProductBtn"
        android:textAppearance="@style/PoppinsMed_20"
        android:textSize="14sp"
        android:theme="@style/RectangleWRedGradientPL"
        app:layout_constraintBottom_toBottomOf="@+id/productListPriceEPLTV"
        app:layout_constraintLeft_toRightOf="@id/productlistnameEPLTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/productlistnameEPLTV" />

</androidx.constraintlayout.widget.ConstraintLayout>