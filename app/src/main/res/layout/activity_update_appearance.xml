<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_gradient_background"
    tools:context=".view.ConfigUpdateAppearanceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutAppearanceHeader"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backArrowAppeareanceConfigBtn"
            style="@style/BackArrowButton"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrowback" />

        <TextView
            android:id="@+id/itleAparienciaConfigTV"
            style="@style/PoppinsBold_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/actualizar_apariencia"
            app:layout_constraintBottom_toBottomOf="@+id/backArrowAppeareanceConfigBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backArrowAppeareanceConfigBtn"
            app:layout_constraintTop_toTopOf="@+id/backArrowAppeareanceConfigBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutContenidoBotonesApariencia"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutAppearanceHeader">

        <TextView
            android:id="@+id/bannerImgTV"
            style="@style/PoppinsRegular_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/seleccionBannerImg"
            app:layout_constraintBottom_toTopOf="@+id/bannerSetBtn"
            app:layout_constraintEnd_toEndOf="@+id/bannerSetBtn"
            app:layout_constraintStart_toStartOf="@+id/bannerSetBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bannerSetBtn"
            style="@style/RectangleWGradient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:text="@string/seleccionaArchivo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bannerImgTV" />

        <TextView
            android:id="@+id/eventsImgTV"
            style="@style/PoppinsRegular_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:text="@string/seleccionEventosImg"
            app:layout_constraintBottom_toTopOf="@+id/eventsSetBtn"
            app:layout_constraintEnd_toEndOf="@+id/eventsSetBtn"
            app:layout_constraintStart_toStartOf="@+id/eventsSetBtn"
            app:layout_constraintTop_toBottomOf="@+id/bannerSetBtn" />

        <Button
            android:id="@+id/eventsSetBtn"
            style="@style/RectangleWGradient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:text="@string/seleccionaArchivo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventsImgTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imagePrueba"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutContenidoBotonesApariencia" />
</androidx.constraintlayout.widget.ConstraintLayout>